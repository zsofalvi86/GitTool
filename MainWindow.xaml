<Window x:Class="GitTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GitTool"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="GIT Tool"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="O"
                    Command="{Binding OpenFolderCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="D"
                    Command="{Binding DeleteTagCommand}"
                    Modifiers="Control" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding Path=OpenFolderCommand}"
                          Header="_Open..."
                          InputGestureText="Ctrl + O" />
            </MenuItem>
            <MenuItem Header="_Select">
                <MenuItem Command="{Binding Path=DeleteTagCommand}"
                          CommandParameter="{Binding ElementName=TagBox, Path=SelectedItems}"
                          Header="_Delete"
                          InputGestureText="Ctrl + D" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="{Binding Path=RepoInfo}" />
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="{Binding Path=QueueInfo}" />
            <ListBox x:Name="TagBox"
                     Grid.Row="1"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     ItemsSource="{Binding Path=Tags}"
                     SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:GitTagItem}">
                        <Grid>
                            <TextBlock Text="{Binding Path=Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
